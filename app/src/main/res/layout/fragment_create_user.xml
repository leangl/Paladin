<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:textAppearance="?android:attr/textAppearanceMedium"/>

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/edittext_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:backgroundTint="@color/red"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phone"
                            android:textAppearance="?android:attr/textAppearanceMedium"/>

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/edittext_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:backgroundTint="@color/red"/>

                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5">

                    <android.support.v7.widget.AppCompatCheckBox
                        android:id="@+id/checkbox_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="@string/require_password_label"
                        app:buttonTint="@color/red"
                        android:textColor="@color/text_color_bold"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"/>

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/edittext_password"
                        android:layout_alignLeft="@+id/checkbox_password"
                        android:layout_alignStart="@+id/checkbox_password"
                        android:layout_below="@+id/checkbox_password"
                        android:layout_marginLeft="30dp"
                        android:layout_marginStart="30dp"
                        android:gravity="bottom"
                        android:paddingBottom="5dp"
                        android:text="Passcode:"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/text_color_pass"/>

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/edittext_password"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/checkbox_password"
                        android:layout_toEndOf="@+id/textView7"
                        android:layout_toRightOf="@+id/textView7"
                        android:maxLength="4"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <android.support.v7.widget.AppCompatCheckBox
                        android:id="@+id/checkbox_notify"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:buttonTint="@color/red"
                        android:checked="true"
                        android:text="@string/notify_door_activity_label"
                        android:textColor="@color/text_color_bold"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignLeft="@+id/checkbox_password"
                        android:layout_alignStart="@+id/checkbox_password"
                        android:layout_marginLeft="10dp"/>

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/spinner_door_event"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/edittext_password"
                        android:layout_alignLeft="@+id/checkbox_notify"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignStart="@+id/checkbox_notify"
                        android:layout_alignTop="@+id/edittext_password"
                        android:spinnerMode="dropdown"
                        android:layout_marginLeft="10dp"/>

                    <android.support.v7.widget.AppCompatCheckBox
                        android:id="@+id/checkbox_time_limits"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_margin="10dp"
                        android:checked="false"
                        android:text="@string/time_limits_label"
                        app:buttonTint="@color/red"
                        android:textColor="@color/text_color_bold"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        />
                    <include layout="@layout/schedule_layout"
                             android:id="@+id/schedule_container" android:visibility="gone"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>