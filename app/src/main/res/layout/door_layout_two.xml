<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="@color/blue_300"
    android:layout_margin="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/door_two_label"
        android:id="@+id/texview_title_door_two"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:textSize="17sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/texview_title_door_two"
        android:layout_alignLeft="@+id/texview_title_door_two"
        android:layout_alignStart="@+id/texview_title_door_two"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <!-- A CardView that contains a TextView -->


        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view1"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cardview_height"
            card_view:cardCornerRadius="4dp"
            android:layout_weight="1.5"
            card_view:cardBackgroundColor="@color/cardview_background"
            card_view:contentPaddingBottom="5dp">
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Closed"
                    android:id="@+id/texview_action_door_two"
                    android:textSize="15sp"
                    android:paddingBottom="1dp"
                    android:layout_below="@+id/textview_label_door_two"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="1dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/door_two_label"
                    android:id="@+id/textview_label_door_two"
                    android:paddingTop="1dp"
                    android:textStyle="bold"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_margin="5dp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view2"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cardview_height"
            card_view:cardCornerRadius="4dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            card_view:cardBackgroundColor="@color/cardview_background">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/voice_label"
                    android:id="@+id/textView"
                    android:paddingTop="1dp"
                    android:textStyle="bold"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_margin="5dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/menu_overflow_two"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/abc_ic_menu_moreoverflow_mtrl_alpha" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/open_label"
                    android:id="@+id/textView2"
                    android:textSize="15sp"
                    android:paddingBottom="1dp"
                    android:layout_below="@+id/textView"
                    android:layout_alignLeft="@+id/textView"
                    android:layout_alignStart="@+id/textView" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Closed"
                    android:id="@+id/texview_open_phrase_two"
                    android:textSize="15sp"
                    android:paddingBottom="1dp"
                    android:layout_toRightOf="@+id/textView2"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_above="@+id/texview_closed_phrase_two"
                    android:layout_alignTop="@+id/textView2"
                    android:layout_marginLeft="3dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Closed"
                    android:id="@+id/texview_closed_phrase_two"
                    android:textSize="15sp"
                    android:paddingBottom="1dp"
                    android:layout_alignTop="@+id/textView5"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_alignLeft="@+id/texview_open_phrase_two"
                    android:layout_alignStart="@+id/texview_open_phrase_two"
                    android:layout_marginLeft="1dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/close_label"
                    android:id="@+id/textView5"
                    android:textSize="15sp"
                    android:paddingBottom="1dp"
                    android:layout_below="@+id/textView2"
                    android:layout_marginTop="12dp"
                    android:layout_alignLeft="@+id/textView2"
                    android:layout_alignStart="@+id/textView2"
                    android:layout_alignRight="@+id/textView"
                    android:layout_alignEnd="@+id/textView" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>
</RelativeLayout>