<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edittext_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:backgroundTint="@color/red"
                android:enabled="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="@string/name_label"/>

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edittext_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:backgroundTint="@color/red"
                android:hint="@string/phone_label"
                android:inputType="number"/>



                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <android.support.v7.widget.AppCompatCheckBox
                        android:id="@+id/checkbox_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_margin="10dp"
                        android:checked="false"
                        android:text="@string/require_password_label"
                        android:textColor="@color/text_color_bold"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:buttonTint="@color/red"/>

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/edittext_password"
                        android:layout_alignLeft="@+id/checkbox_password"
                        android:layout_alignStart="@+id/checkbox_password"
                        android:layout_below="@+id/checkbox_password"
                        android:layout_marginLeft="30dp"
                        android:layout_marginStart="30dp"
                        android:gravity="bottom"
                        android:paddingBottom="5dp"
                        android:text="Passcode:"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/text_color_pass"/>

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/edittext_password"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/checkbox_password"
                        android:layout_toEndOf="@+id/textView7"
                        android:layout_toRightOf="@+id/textView7"
                        android:maxLength="4"
                        android:inputType="number"
                        app:backgroundTint="@color/red"/>

                </RelativeLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <android.support.v7.widget.AppCompatCheckBox
                        android:id="@+id/checkbox_notify"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/notify_door_activity_label"
                        android:textColor="@color/text_color_bold"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:buttonTint="@color/red"
                        android:layout_marginBottom="10dp"/>

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/spinner_door_event"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/edittext_password"
                        android:layout_alignLeft="@+id/checkbox_notify"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignStart="@+id/checkbox_notify"
                        android:layout_alignTop="@+id/edittext_password"
                        android:spinnerMode="dropdown"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.v7.widget.AppCompatCheckBox
                        android:id="@+id/checkbox_time_limits"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="10dp"
                        android:checked="false"
                        android:text="@string/time_limits_label"
                        android:textColor="@color/text_color_bold"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:buttonTint="@color/red"/>

                    <include
                        android:id="@+id/schedule_container"
                        layout="@layout/schedule_layout"
                        android:visibility="invisible"/>

                </LinearLayout>
            </LinearLayout>


</ScrollView>